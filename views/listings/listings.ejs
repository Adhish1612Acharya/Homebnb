<% layout("/layouts/boilerplate") %>
<style>
  #filters{
    height: 5rem;
    width:100%;
    margin-bottom: 2rem;
    padding-top:2rem ;
    display:flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: nowrap;
  }

  #filter{
   opacity: 0.8;
   margin: 1rem;
  }

  #filter:hover{
   cursor: pointer;
   opacity:1 ;
  }

  .tax-info{
    color:black;
    display: none;
  }

  .tax-toggle{
    border: 2px solid black;
    width: max-content;
    height: 3rem;
    padding:0.5rem;
    border-radius: 10px;
    margin: 1rem;
  }

  a{
    text-decoration: none;
    color: black;
  }
</style>
<div id="filters">
  <div id="filter">
    <a href="/listings/filter/Trending">
      <i class="fa-solid fa-fire"></i>&nbsp;<span>Trending</span>
    </a>
  </div>
  <div id="filter">
    <a href="/listings/filter/Rooms">
      <i class="fa-solid fa-bed"></i>&nbsp;<span>Rooms</span>
    </a>
  </div>
  <div id="filter">
    <a href="/listings/filter/Iconic-cities">
      <i class="fa-solid fa-city"></i>&nbsp;<span>Iconic cities</span>
    </a> 
  </div>
  <div id="filter">
    <a href="/listings/filter/Mountains">
      <i class="fa-solid fa-mountain"></i>&nbsp;Mountains<span></span>
    </a> 
  </div>
  <div id="filter">
    <a href="/listings/filter/Castle">
      <i class="fa-regular fa-chess-rook"></i>&nbsp;Castle<span></span>
    </a> 
  </div>
  <div id="filter">
    <a href="/listings/filter/Amazing-pools">
      <i class="fa-solid fa-person-swimming"></i>&nbsp;<span>Amazing pools</span>
    </a> 
  </div>
  <div id="filter">
    <a href="/listings/filter/Camping">
      <i class="fa-solid fa-campground"></i>&nbsp;Camping<span></span>
